<UserControl x:Class="proj_automatos.Controls.TuringMachineEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:proj_automatos.Controls"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="320" d:DesignWidth="120">
    <Grid Width="80" Height="320">
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Border
            x:Name="SelectionBorder"
            Grid.Row="1"
            Margin="0 15 0 15"
            Background="Red">
        </Border>
        <Border
            x:Name="Border"
            Margin="2,0,4,0"
            Height="80"
            VerticalAlignment="Center"
            Grid.Row="1"
            Background="Purple"
            CornerRadius="10">
            <Label
                x:Name="EntryContent"
                Foreground="Black"
                Margin="0 20 0 0"
                Content="_"
                FontSize="24"
                FontWeight="Heavy"
                HorizontalContentAlignment="Center">
            </Label>
        </Border>
    </Grid>
</UserControl>
